<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		{% block stylesheets %}
			{% stylesheets '@BRBarBundle/Resources/public/css/*' %}
				<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
			{% endstylesheets %}
		{% endblock %}
		{% block javascripts %}
			<script type="text/javascript"> var bar = "{{bar}}"; </script>
			{% javascripts '@BRBarBundle/Resources/public/js/*' %}
				<script type="text/javascript" src="{{ asset_url }}"></script>
			{% endjavascripts %}
		{% endblock %}
		{% block header %}
		{% endblock %}
	</head>
	<body>
		<table id="body" cellpadding="0" cellspacing="0">
			<tr>
				<td id="body-logo">
					<a href="{{ path('br_bar_barhome') }}" class="image">
						{% image '@BRBarBundle/Resources/public/images/bars-logo.png' %}
							<img src="{{ asset_url }}" alt="[LOGO]" />
						{% endimage %}
					</a>
					{% if bar %}
						<a href="{{ path('br_bar_barhome', {'bar':bar}) }}" class="image">
							{# {% image '@BRBarBundle/Resources/public/images/{bar}.png' vars=['bar'] %}
								<img src="{{ asset_url }}" alt="[{{bar}}]" width="64px" height="64px" />
							{% endimage %} #}
							<img src="{{ asset('bundles/brbar/images/' ~ bar ~ '.png') }}" alt="[{{bar}}]" width="64px" height="64px" />
						</a>
					{% endif %}
				</td>
				<td id="body-header">
					{% block content_title %}{% endblock %}
				</td>
			</tr>
			<tr>
				<td id="body-menu" rowspan="2" valign="top">
					{% block sidebar %}
						{# {% import "BRBarBundle:Default:sidebar.html.twig" %} #}
					{% endblock %}
				</td>
				<td id="body-form">
					{% block form %}
						<form action="{{ path('br_bar_foods', {'bar':bar}) }}" method="GET">
							<label for="q_alim">Acheter</label>
							<input type="text" name="q_alim" />
							<input type="submit" value="Rechercher" />
						</form>
					{% endblock %}
				</td>
			</tr>
			<tr>
				<td id="body-content">
					{% block content %}{% endblock %}
				</td>
			</tr>
			<tr>
				<td id="body-footer" colspan="2">
					{% block footer %}{% endblock %}
				</td>
			</tr>
		</table>
	</body>
</html>
