services:
{% for e in entities %}
{% if e.genType %}
    br_bar.type.{{e.shortName}}:
        class: BR\BarBundle\Type\{{e.namespace}}\{{e.class}}Type
        arguments: ["@doctrine.orm.entity_manager"]
        tags:
            - { name: form.type, alias: {{e.shortName}} }
{% endif %}
{% endfor %}


{% for e in entities %}
{% if e.genTypeid %}
    br_bar.type.{{e.shortName}}_id:
        class: BR\BarBundle\Type\{{e.namespace}}\{{e.class}}IdType
        arguments: ["@doctrine.orm.entity_manager"]
        tags:
            - { name: form.type, alias: {{e.shortName}}_id }
{% endif %}
{% endfor %}
